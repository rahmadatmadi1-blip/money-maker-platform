# Security Configuration for Payment System
# Copy this to .env and set your own secure values

# Payment Encryption Key (REQUIRED for production)
# Generate a strong 64+ character key with letters, numbers, and special characters
# Example: openssl rand -base64 64
PAYMENT_ENCRYPTION_KEY=your-super-secure-64-character-encryption-key-here-with-special-chars!@#$%

# Session Security
SESSION_SECRET=your-session-secret-key-minimum-32-characters

# JWT Security
JWT_SECRET=your-jwt-secret-key-minimum-32-characters
JWT_EXPIRE=24h

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
PAYMENT_RATE_LIMIT_MAX=5

# Security Headers
CSP_REPORT_ONLY=false
CSP_UNSAFE_INLINE=false
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true

# Backup Encryption (Optional)
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key-64-characters

# Security Monitoring
SECURITY_ALERTS_ENABLED=true
SECURITY_LOG_LEVEL=info

# Payment Gateway Security
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret
PAYPAL_WEBHOOK_ID=your_paypal_webhook_id

# Database Security
DB_ENCRYPTION_AT_REST=true
DB_SSL_ENABLED=true

# File Upload Security
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# IP Whitelist for Admin Operations (comma-separated)
ADMIN_IP_WHITELIST=127.0.0.1,::1

# Security Audit
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=90

# Two-Factor Authentication
TWO_FA_ENABLED=false
TWO_FA_ISSUER=MoneyMaker Platform

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true
PASSWORD_MAX_AGE_DAYS=90

# Account Security
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30
SESSION_TIMEOUT_MINUTES=60

# Data Retention
PAYMENT_DATA_RETENTION_YEARS=7
LOG_RETENTION_DAYS=365
SESSION_DATA_RETENTION_DAYS=30