{
    "name": "money-maker-platform-backend",
    "version": "1.0.0",
    "description": "Money Maker Platform - PHP Laravel Backend",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "lint": "eslint resources/js --ext .js,.vue --fix",
        "format": "prettier --write resources/js/**/*.{js,vue,css}",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "serve": "php artisan serve",
        "fresh": "php artisan migrate:fresh --seed",
        "setup": "composer install && npm install && cp .env.example .env && php artisan key:generate && php artisan jwt:secret",
        "production": "npm run build && php artisan config:cache && php artisan route:cache && php artisan view:cache"
    },
    "devDependencies": {
        "@vitejs/plugin-laravel": "^0.7.5",
        "@vitejs/plugin-vue": "^4.2.3",
        "axios": "^1.4.0",
        "bootstrap": "^5.3.0",
        "eslint": "^8.44.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-vue": "^9.15.1",
        "jest": "^29.6.1",
        "laravel-vite-plugin": "^0.7.8",
        "postcss": "^8.4.24",
        "prettier": "^3.0.0",
        "sass": "^1.63.6",
        "vite": "^4.4.0",
        "vue": "^3.3.4"
    },
    "dependencies": {
        "@fortawesome/fontawesome-free": "^6.4.0",
        "@popperjs/core": "^2.11.8",
        "chart.js": "^4.3.0",
        "lodash": "^4.17.21",
        "moment": "^2.29.4",
        "sweetalert2": "^11.7.12"
    },
    "engines": {
        "node": ">=16.0.0",
        "npm": ">=8.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/your-username/money-maker-platform-backend.git"
    },
    "keywords": [
        "laravel",
        "php",
        "backend",
        "api",
        "money-maker",
        "platform",
        "payment",
        "stripe",
        "paypal",
        "jwt",
        "authentication"
    ],
    "author": {
        "name": "Money Maker Platform Team",
        "email": "dev@moneymaker.com"
    },
    "license": "MIT",
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not dead"
    ],
    "jest": {
        "testEnvironment": "jsdom",
        "setupFilesAfterEnv": [
            "<rootDir>/tests/js/setup.js"
        ],
        "moduleNameMapping": {
            "^@/(.*)$": "<rootDir>/resources/js/$1"
        },
        "transform": {
            "^.+\\.vue$": "@vue/vue3-jest",
            "^.+\\.js$": "babel-jest"
        },
        "collectCoverageFrom": [
            "resources/js/**/*.{js,vue}",
            "!resources/js/app.js",
            "!**/node_modules/**"
        ]
    },
    "eslintConfig": {
        "env": {
            "browser": true,
            "es2021": true,
            "node": true
        },
        "extends": [
            "eslint:recommended",
            "plugin:vue/vue3-essential",
            "prettier"
        ],
        "parserOptions": {
            "ecmaVersion": "latest",
            "sourceType": "module"
        },
        "plugins": [
            "vue"
        ],
        "rules": {
            "no-console": "warn",
            "no-debugger": "warn",
            "vue/multi-word-component-names": "off"
        }
    },
    "prettier": {
        "semi": true,
        "singleQuote": true,
        "tabWidth": 2,
        "trailingComma": "es5",
        "printWidth": 100,
        "bracketSpacing": true,
        "arrowParens": "avoid"
    }
}